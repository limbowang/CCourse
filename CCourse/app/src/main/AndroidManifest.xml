<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.limbo.ccourse" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.note.NoteCreateActivity"
            android:label="@string/title_activity_note_create" />
        <activity
            android:name=".ui.note.NoteViewActivity"
            android:label="@string/title_activity_note_view" />
        <activity
            android:name=".ui.course.CourseCreateActivity"
            android:label="@string/title_activity_course_create" >
        </activity>
    </application>

</manifest>
